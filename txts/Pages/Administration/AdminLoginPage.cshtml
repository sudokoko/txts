@page "/admin/login"
@using txts.Types.Website
@model txts.Pages.Administration.AdminLoginPage

@{
    Layout = "Layouts/PageLayout";

    Model.Title = "Admin Login";
}

@if (Model.ErrorMessage != null)
{
    @await Html.PartialAsync("Partials/MessagePartial", new MessageEntity("Failed to log in", Model.ErrorMessage, MessageType.Error))
}

@switch (Model.Callback)
{
    case "signup":
        @await Html.PartialAsync("Partials/MessagePartial", new MessageEntity("Admin account created successfully", "You can now log in with your new account.", MessageType.Success))
        break;
    case "cleanSessions":
        @await Html.PartialAsync("Partials/MessagePartial", new MessageEntity("Sessions cleaned up successfully", "You will need to log in again.", MessageType.Success))
        break;
}

<div class="secondary-container">
    <form method="POST" action="/admin/login">
        @Html.AntiForgeryToken()

        <input type="text" id="username" name="username" placeholder="Username"/>
        <input type="password" id="password" name="password" placeholder="Password"/>

        <button type="submit">Log In</button>
    </form>
</div>